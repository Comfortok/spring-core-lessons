<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
    <bean id="client" class="com.epam.spring.core.bean.Client">
        <constructor-arg index="0" value="1"/>
        <constructor-arg index="1" value="John Blacker"/>
    </bean>

    <bean id="eventLogger" class="com.epam.spring.core.logger.ConsoleEventLogger"/>

    <bean id="app" class="com.epam.spring.core.App">
            <constructor-arg ref="client"/>
            <constructor-arg ref="eventLogger"/>
    </bean>

    <bean id="event" class="com.epam.spring.core.bean.Event" scope="prototype"/>

    <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
</beans>